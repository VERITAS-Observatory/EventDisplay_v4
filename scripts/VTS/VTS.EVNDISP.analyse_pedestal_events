#!/bin/bash
#####################################
# calculate pedestals
#
#  Revision $Id: evndisp.calculate_pedestals,v 1.14.20.1.2.1.4.1.6.1.6.2.2.3.2.3 2010/11/11 10:11:42 gmaier Exp $
#
# Author: Gernot Maier
#
#####################################

if [ ! -n "$1" ] || [ ! -n "$2" ] || [ "$1" = "-h" ]
then
   echo
   echo "VTS.EVNDISP.analyse_pedestal_events <telescope number> <sourcefile> [runnumber] [lowgain]"
   echo
   echo "calculate pedestals from a data file (for high and low gain)"
   echo
   echo "required parameters:"
   echo 
   echo "    <telescope number>      use 1 for telescope 1, 13 for telescope 1 and 3 only, etc."
   echo "                            (default telescope combination is 1234)"
   echo "    <sourcefile>            VERITAS data file (vbf or cvbf file)"
   echo 
   echo "optional parameters: "
   echo
   echo "    [runnumber]             runnumber"
   echo "    [lowgain=1]             low gain pedestal calculation (expert user only!)"
   echo
   echo "example:"
   echo
   echo "    VTS.EVNDISP.analyse_pedestal_events 123 d20070206/33709.cvbf"
   echo
   echo "----------------------------------------------------------------------------------------"
   exit
fi

# run options
OPT="-runmode=1 -sumfirst=0 -sumwindow=20"
if [ -n "$4" ] && [ $4 = "1" ]
then
   OPT="-sumfirst=40 -sumwindow=20 -runmode=6 -nevents=10000"
fi

# number of telescopes to analyse
if [ $1 != "-1" ]
then
  OPT="$OPT -teltoana=$1"
fi

# source file

# first check if source file exists
if [ ! -e $2 ]
then
   echo
   echo "ERROR: VERITAS source file not found: $2"
   echo
   exit
fi
OPT="-sourcefile $2 $OPT"

if [ -n "$3" ]
then
  OPT="$OPT -runnumber=$3"
fi


#########################
# NOW START EVENTDISPLAY
#########################
echo "$EVNDISPSYS/bin/evndisp $OPT"
$EVNDISPSYS/bin/evndisp $OPT


exit
